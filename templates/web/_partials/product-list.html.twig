<div class="col-lg-3 mb-4">
    <div class="card">
        <a href="{{ url }}">
            <img src="{{ image }}" class="card-img-top" alt="{{ product.name }}">
        </a>
        <div class="card-body">
            <h5 class="card-title">{{ product.name }}</h5>
            <p class="card-text">{{ product.description }}</p>
            <a href="{{ url }}" class="btn btn-primary">
                Go somewhere
            </a>
        </div>
    </div>
</div>