{% extends 'base.html.twig' %}
{% block title %}Produtos{% endblock %}

{% block body %}
    <section>
        <header class="border-bottom pb-2 mb-5 d-flex justify-content-between align-items-center">
            <h1 class="h4 mb-0">Produtos</h1>
            <a href="{{ path('admin_products_create') }}" class="btn btn-success btn-sm">
                <i class="fas fa-plus"></i>
                Novo Produto
            </a>
        </header>
        {% if products is defined %}
            <div class="table-responsive">
                <table class="table table-bordered table-striped">
                    <thead>
                    <tr>
                        <th scope="col">Nome</th>
                        <th scope="col">Ações</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for product in products %}
                        <tr>
                            <td>{{ product.name }}</td>
                            <td>
                                <a href="" target="_blank" class="btn btn-primary btn-sm">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a href="{{ path('admin_products_edit', {'product': product.id}) }}" class="btn btn-info btn-sm mx-2">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <form action="{{ path('admin_products_destroy', {'product': product.id}) }}" method="post" onsubmit="return confirm('Tem certeza de que deseja excluir a página permanentemente?');" class="d-inline">
                                    <input type="hidden" name="_method" value="DELETE">

                                    <button type="submit" class="btn btn-danger btn-sm">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        {% else %}
            <div class="alert alert-info" role="alert">
                Não há nenhum produto cadastrado.
            </div>
        {% endif %}
    </section>
{% endblock %}

{% block javascripts %}
    <script>
        $('a').addClass('btn-lg')
    </script>
{% endblock %}
