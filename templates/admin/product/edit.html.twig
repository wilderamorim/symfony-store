{% extends 'base.html.twig' %}
{% block title %}Editar Produto{% endblock %}

{% block body %}
    <section>
        <header class="border-bottom pb-2 mb-5 d-flex justify-content-between align-items-center">
            <h1 class="h4 mb-0">Editar Produto</h1>
            <a href="{{ path('admin_products_index') }}" class="btn btn-primary btn-sm">
                <i class="fas fa-list"></i>
                Ver Produtos
            </a>
        </header>

        <div class="row">
            {% for photo in photos %}
                <div class="col-lg-4 mb-4">
                    <img src="{{ '/uploads/products/' ~ photo.image }}" alt="..." class="img-thumbnail">
                    <a href="{{ path('admin_product_photo_destroy', {'photo': photo.id}) }}" class="btn btn-sm btn-danger"><i class="fas fa-trash"></i></a>
                </div>
            {% endfor %}
        </div>

        {% include 'admin/product/_form.html.twig' %}

    </section>
{% endblock %}

{% block javascripts %}
    <script src="https://github.com/codermarcos/simple-mask-money/releases/download/v3.0.0/simple-mask-money.js"></script>
    <script src="{{ asset('/scripts/mask-money.js') }}"></script>
{% endblock %}
